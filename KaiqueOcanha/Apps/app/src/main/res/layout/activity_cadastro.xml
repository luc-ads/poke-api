<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="25dp"
    tools:context=".CadastroActivity">

    <TextView
        android:id="@+id/label_input_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Nome de usuÃ¡rio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edit_text_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_background_edittext"
        app:layout_constraintTop_toBottomOf="@id/label_input_nome"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/label_input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="E-mail de acesso"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_nome"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_background_edittext"
        app:layout_constraintTop_toBottomOf="@id/label_input_email"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/label_input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Senha para conta"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_email"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_background_edittext"
        app:layout_constraintTop_toBottomOf="@id/label_input_password"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/button_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Cadastrar-se"
        android:background="@drawable/background_button"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>